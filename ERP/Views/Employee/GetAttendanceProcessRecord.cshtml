                var fromDate = $("#FromDate").val().toString();
                var toDate = $("#ToDate").val().toString();

                alert(fromDate);

                var jsonobj = {
                    FromDate: fromDate,
                    ToDate: toDate
                };

                $.ajax({
                    type: 'post',
                    url: @Url.Action("AttendenceReport","Report"),
                    data: JSON.stringify(jsonobj),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json"
                });
            });*@
        })

    </script>
}

