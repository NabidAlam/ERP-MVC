@model ERP.MODEL.JobTypeModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Job Type Entry";
    IPagedList<JobTypeModel> JobTypeList = ViewBag.JobTypeList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }



}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">JOB TYPE INFORMATION</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveJobType", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()


                <div class="form-group">
                    @*@Html.LabelFor(m => m.JobTypeId, new { @class = "col-lg-3 control-label" })*@
                    <div class="col-lg-4">
                        @Html.HiddenFor(m => m.JobTypeId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.JobTypeName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.JobTypeName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Job Type" })
                        @Html.ValidationMessageFor(m => m.JobTypeName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <a href="@Url.Action("ClearJobType","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            @*<h4 class="panel-title"></h4>*@
            <span class="panel-title">JOB TYPE ENTRY RECORD</span>
            <a href="@Url.Action("ClearJobType","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Record
            </a>
        </div>

        <div class="panel-body">
           @using (Html.BeginForm("GetJobTypeRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter Job Type name & then press enter" })
            }


            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Job Type Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @{

                            foreach (var JobType in JobTypeList)
                            {
                                <tr>
                                    <td> @JobType.SerialNumber </td>
                                    <td> @JobType.JobTypeName </td>
                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetJobTypeRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            @*@Html.AntiForgeryToken()*@
                                            <input type="hidden" name="pId" value="@JobType.JobTypeId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }

                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(JobTypeList.PageCount < JobTypeList.PageNumber ? 0 : JobTypeList.PageNumber) of @JobTypeList.PageCount
                </span>
                <span class="showing-info">
                    Showing @JobTypeList.FirstItemOnPage to @JobTypeList.LastItemOnPage of @JobTypeList.TotalItemCount Job Type
                </span>
                @Html.PagedListPager(JobTypeList, page => Url.Action("GetJobTypeRecord", new { page, pageSize = JobTypeList.PageSize, SearchBy = ViewBag.searchValue }))


                
            </div>
        </div>
    </div>
</div>



@section Scripts {
 
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

