@model ERP.MODEL.OfficeTimeSpecialModel
@using ERP.MODEL
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Office Time";
    IPagedList<OfficeTimeSpecialModel> officeTimeSpecialList = ViewBag.OfficeTimeSpecialList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }
}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">OFFICE TIME(SPECIAL) INFORMATION</h4>
        </div>

        @if (!string.IsNullOrWhiteSpace(vMessage))
        {
            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">

            @using (Html.BeginForm("SaveOfficeTimeSpecial", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "__AjaxAntiForgeryForm" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.OfficeTimeId)

                <div class="form-group">
                    @Html.LabelFor(m => m.UnitId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(m => m.UnitId, ViewBag.UnitDDList as SelectList, new { @class = "form-control", @autofocus = true })
                        @Html.ValidationMessageFor(m => m.UnitId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.FromDate, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.FromDate,  new { @class = "form-control datepicker", @autofocus = false, @placeholder = "Enter date" })
                        @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("In/Out Time", new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.FirstInTime, new { @class = "form-control in-out-time", @autofocus = false, @placeholder = "Enter first in-time" })
                                @Html.ValidationMessageFor(m => m.FirstInTime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LastOutTime, new { @class = "form-control in-out-time", @autofocus = false, @placeholder = "Enter last out-time" })
                                @Html.ValidationMessageFor(m => m.LastOutTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Lunch Out/In", new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LunchOutTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter lunch out-time" })
                                @Html.ValidationMessageFor(m => m.LunchOutTime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LunchInTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter lunch in-time" })
                                @Html.ValidationMessageFor(m => m.LunchInTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearOfficeTimeSplecial", "LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">OFFICE TIME(SPECIAL) RECORD</span>
            <a href="@Url.Action("ClearOfficeTimeSplecial","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Record
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetOfficeTimeSpecialEntryRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter unit name or date & then press enter" })
            }

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Unit</th>
                            <th>Date</th>
                            <th>First In Time</th>
                            <th>Last Out Time</th>
                            <th>Lunch Out Time</th>
                            <th>Lunch In Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var objOfficeTime in officeTimeSpecialList)
                            {
                                <tr>
                                    <td> @objOfficeTime.SerialNumber </td>
                                    <td> @objOfficeTime.UnitName </td>
                                    <td> @objOfficeTime.FromDate</td>
                                    <td> @objOfficeTime.FirstInTime </td>
                                    <td> @objOfficeTime.LastOutTime </td>
                                    <td> @objOfficeTime.LunchOutTime </td>
                                    <td> @objOfficeTime.LunchInTime </td>
                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetOfficeTimeSpecialEntryRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            <input type="hidden" name="pId" value="@objOfficeTime.OfficeTimeId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(officeTimeSpecialList.PageCount < officeTimeSpecialList.PageNumber ? 0 : officeTimeSpecialList.PageNumber) of @officeTimeSpecialList.PageCount
                </span>
                <span class="showing-info">
                    Showing @officeTimeSpecialList.FirstItemOnPage to @officeTimeSpecialList.LastItemOnPage of @officeTimeSpecialList.TotalItemCount OFFICE TIME(SPECIAL)
                </span>
                @Html.PagedListPager(officeTimeSpecialList, page => Url.Action("GetOfficeTimeSpecialEntryRecord", new { page, pageSize = officeTimeSpecialList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
  
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}