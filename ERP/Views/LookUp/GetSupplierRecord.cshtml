@model ERP.MODEL.SupplierModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Supplier Entry";
    IPagedList<SupplierModel> supplierList = ViewBag.Supplier;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }



}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD SUPPLIER</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveSupplierInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.SupplierId)

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierName, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter supplier name" })
                                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-1">
                                <span class="required">*</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BankName, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter bank name." })
                                @Html.ValidationMessageFor(m => m.BankName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.SwiftCode, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.SwiftCode, new { rows = "6", cols = "10", @class = "form-control", @placeholder = "Enter swift code" })
                                @Html.ValidationMessageFor(m => m.SwiftCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CountryId, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.DropDownListFor(m => m.CountryId, ViewBag.CountryDDList as SelectList, new { @class = "form-control", @placeholder = "Enter buyer address" })
                                @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierContactNo, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.SupplierContactNo, new { @class = "form-control", @placeholder = "Enter contact no." })
                                @Html.ValidationMessageFor(m => m.SupplierContactNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierEmail, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.SupplierEmail, new { @class = "form-control", @autofocus = true, @placeholder = "Enter supplier email" })
                                @Html.ValidationMessageFor(m => m.SupplierEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.SupplierAddress, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-7">
                                @Html.TextAreaFor(m => m.SupplierAddress, new { rows = "3", cols = "6", @class = "form-control", @placeholder = "Enter supplier address" })
                                @Html.ValidationMessageFor(m => m.SupplierAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <div class="col-lg-6 row">
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-10">
                            <button class="btn btn-md btn-primary btn-save" type="submit">
                                <i class="fa fa-save"></i> Save
                            </button>

                            <a href="@Url.Action("ClearSupplierInfo","LookUp")" class="btn btn-md btn-warning btn-clear">
                                <i class="fa fa-circle-o-notch"></i> Clear
                            </a>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">BUYER RECORDS</span>
            <a href="@Url.Action("ClearSupplierInfo","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetSupplierRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter supplier name & then press enter" })
            }


            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>SUPPLIER NAME</th>
                            <th>BANK</th>
                            <th>SWIFT CODE</th>
                            <th>COUNTRY</th>
                            <th>CONTACT NO</th>
                            <th>EMAIL</th>
                            <th>SUPPLIER ADDRESS</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var supplier in supplierList)
                            {
                                <tr>
                                    <td> @supplier.SerialNumber </td>
                                    <td> @supplier.SupplierName </td>
                                    <td> @supplier.BankName </td>
                                    <td> @supplier.SwiftCode </td>
                                    <td> @supplier.CountryName </td>
                                    <td> @supplier.SupplierContactNo </td>
                                    <td> @supplier.SupplierEmail </td>
                                    <td> @supplier.SupplierAddress </td>
                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetSupplierRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            @*@Html.AntiForgeryToken()*@
                                            <input type="hidden" name="pId" value="@supplier.SupplierId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(supplierList.PageCount < supplierList.PageNumber ? 0 : supplierList.PageNumber) of @supplierList.PageCount
                </span>
                <span class="showing-info">
                    Showing @supplierList.FirstItemOnPage to @supplierList.LastItemOnPage of @supplierList.TotalItemCount Suppliers
                </span>
                @Html.PagedListPager(supplierList, page => Url.Action("GetSupplierRecord", new { page, pageSize = supplierList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
  
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

