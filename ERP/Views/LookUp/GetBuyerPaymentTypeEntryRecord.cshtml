@model ERP.MODEL.BuyerPaymentTypeEntryModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Buyer Payment Type Entry";
    IPagedList<BuyerPaymentTypeEntryModel> BuyerPaymentTypeEntryList = ViewBag.BuyerPaymentTypeEntryList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }

}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD BUYER PAYMENT TYPE</h4>
        </div>
            @if (!string.IsNullOrWhiteSpace(vMessage))
            {
                <div class="row alert alert-success alert-dismissable alert-custom">
                    <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                    <span class="success-msg">@vMessage</span>
                </div>
            }

        <div class="panel-body">
            @using (Html.BeginForm("SaveBuyerPaymentTypeEntry", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.PaymentTypeId)

                <div class="form-group">
                    @Html.LabelFor(m => m.PaymentTypeName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.PaymentTypeName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter buyer payment type name" })
                        @Html.ValidationMessageFor(m => m.PaymentTypeName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearBuyerPaymentTypeEntry", "LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">BUYER PAYMENT TYPE RECORD</span>
            <a href="@Url.Action("ClearBuyerPaymentTypeEntry","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Record
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetBuyerPaymentTypeEntryRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter buyer payment type name & then press enter" })
            }

          
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Buyer Payment Type Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var BuyerPaymentEntry in BuyerPaymentTypeEntryList)
                            {
                            <tr>
                                <td> @BuyerPaymentEntry.SerialNumber </td>
                                <td> @BuyerPaymentEntry.PaymentTypeName </td>
                                <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetBuyerPaymentTypeEntryRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                        
                                            <input type="hidden" name="pId" value="@BuyerPaymentEntry.PaymentTypeId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }
                                </td>
                            </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(@BuyerPaymentTypeEntryList.PageCount < @BuyerPaymentTypeEntryList.PageNumber ? 0 : @BuyerPaymentTypeEntryList.PageNumber) of @BuyerPaymentTypeEntryList.PageCount
                </span>
                <span class="showing-info">
                    Showing @BuyerPaymentTypeEntryList.FirstItemOnPage to @BuyerPaymentTypeEntryList.LastItemOnPage of @BuyerPaymentTypeEntryList.TotalItemCount Buyer Payment Type
                </span>
                @Html.PagedListPager(BuyerPaymentTypeEntryList, page => Url.Action("GetBuyerPaymentTypeEntryRecord", new { page, pageSize = BuyerPaymentTypeEntryList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>


@section Scripts {
   
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

