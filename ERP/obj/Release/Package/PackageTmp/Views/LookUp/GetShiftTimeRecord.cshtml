@model ShiftTimeModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Shift Time";
    IPagedList<ShiftTimeModel> shiftTimeList = ViewBag.ShiftTime;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }
}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">SHIFT TIME</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveShiftTimeInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ShiftTimeId)

                <div class="form-group">
                    @Html.LabelFor(m => m.ShiftId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(m => m.ShiftId, ViewBag.ShiftTimeDDList as SelectList, new { @class = "form-control", @autofocus = true })
                        @Html.ValidationMessageFor(m => m.ShiftId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("In/Out Time", new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.FirstInTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter first in-time" })
                                @Html.ValidationMessageFor(m => m.FirstInTime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LastOutTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter last out-time" })
                                @Html.ValidationMessageFor(m => m.LastOutTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Lunch Out/In", new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LunchOutTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter lunch out-time" })
                                @Html.ValidationMessageFor(m => m.LunchOutTime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.LunchInTime, new { @class = "form-control in-out-time", @autofocus = true, @placeholder = "Enter lunch in-time" })
                                @Html.ValidationMessageFor(m => m.LunchInTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearShiftTimeInfo","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">SHIFT TIME RECORD</span>
            <a href="@Url.Action("ClearShiftTimeInfo","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetShiftTimeRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter ID or name & then press enter" })
            }

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th style="text-align: center">Serial</th>
                            <th style="text-align: center">SHIFT TIME</th>
                            <th style="text-align: center">IN TIME</th>
                            <th style="text-align: center">OUT TIME</th>
                            <th style="text-align: center">LUNCH OUT TIME</th>
                            <th style="text-align: center">LUNCH IN TIME</th>
                            <th style="text-align: center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var shift in shiftTimeList)
                            {
                                <tr>
                                    <td style="text-align: right"> @shift.SerialNumber </td>
                                    <td style="text-align: left"> @shift.ShiftName </td>
                                    <td style="text-align: right"> @shift.FirstInTime </td>
                                    <td style="text-align: right"> @shift.LastOutTime </td>
                                    <td style="text-align: right"> @shift.LunchOutTime </td>
                                    <td style="text-align: right"> @shift.LunchInTime </td>
                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetShiftTimeRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            //@Html.AntiForgeryToken()
                                            <input type="hidden" name="pId" value="@shift.ShiftTimeId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }

                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(shiftTimeList.PageCount < shiftTimeList.PageNumber ? 0 : shiftTimeList.PageNumber) of @shiftTimeList.PageCount
                </span>
                <span class="showing-info">
                    Showing @shiftTimeList.FirstItemOnPage to @shiftTimeList.LastItemOnPage of @shiftTimeList.TotalItemCount Shift Times
                </span>
                @Html.PagedListPager(shiftTimeList, page => Url.Action("GetShiftTimeRecord", new { page, pageSize = shiftTimeList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

