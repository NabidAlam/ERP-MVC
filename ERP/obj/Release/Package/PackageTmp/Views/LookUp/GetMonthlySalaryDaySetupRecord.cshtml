@model ERP.MODEL.SalaryMonthModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Salary Month Setup";
    IPagedList<SalaryMonthModel> SalaryMonthSetupList = ViewBag.SalaryMonthSetupList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }
}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD SALARY MONTH SETUP</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveSalaryMonthSetupInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()


                <div class="form-group">
                    @Html.LabelFor(m => m.SalaryYear, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.SalaryYear, new { @class = "form-control", @autofocus = true, @placeholder = "Enter salary year" })
                        @Html.ValidationMessageFor(m => m.SalaryYear, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.MonthId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(m => m.MonthId, ViewBag.MonthDDList as SelectList, new { @class = "form-control", @autofocus = true })
                        @Html.ValidationMessageFor(m => m.MonthId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.FromDate, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control datepicker", @autofocus = true, @placeholder = "Select from date" })
                        @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>

                </div>



                <div class="form-group">
                    @Html.LabelFor(m => m.ToDate, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control datepicker", @autofocus = true, @placeholder = "Select to date" })
                        @Html.ValidationMessageFor(m => m.ToDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>

                </div>



                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearMonthlyWorkingDaySetup", "LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>




            }

        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">MONTHLY SALARY DAY SETUP RECORDS</span>
            <a href="@Url.Action("ClearMonthlyWorkingDaySetup","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetMonthlySalaryDaySetupRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter color name & then press enter" })
            }


            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>SERIAL</th>
                            <th>YEAR</th>
                            <th>MONTH</th>
                            <th>FROM DATE</th>
                            <th>TO DATE</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var MonthSetupList in SalaryMonthSetupList)
                            {
                                <tr>
                                    <td> @MonthSetupList.SerialNumber </td>
                                    <td> @MonthSetupList.SalaryYear </td>
                                    <td> @MonthSetupList.MonthId </td>
                                    <td> @MonthSetupList.FromDate </td>
                                    <td> @MonthSetupList.ToDate </td>


                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetMonthlySalaryDaySetupRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            @*@Html.AntiForgeryToken()*@
                                            <input type="hidden" name="pId" value="@MonthSetupList.SalaryYear" />
                                            <input type="hidden" name="pMonthId" value="@MonthSetupList.MonthId" />

                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                <span class="page-info">
                    Page @(SalaryMonthSetupList.PageCount < SalaryMonthSetupList.PageNumber ? 0 : SalaryMonthSetupList.PageNumber) of @SalaryMonthSetupList.PageCount
                </span>
                <span class="showing-info">
                    Showing @SalaryMonthSetupList.FirstItemOnPage to @SalaryMonthSetupList.LastItemOnPage of @SalaryMonthSetupList.TotalItemCount Colors
                </span>
                @Html.PagedListPager(SalaryMonthSetupList, page => Url.Action("GetMonthlySalaryDaySetupRecord", new { page, pageSize = SalaryMonthSetupList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {

    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

