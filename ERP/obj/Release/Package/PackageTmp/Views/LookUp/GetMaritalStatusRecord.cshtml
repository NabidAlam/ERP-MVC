@model ERP.MODEL.MaritalStatusModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Marital Status";
    IPagedList<MaritalStatusModel> maritalStatusList = ViewBag.MaritalStatus;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }



}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD MARITAL STATUS</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveMaritalStatusInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               
                @Html.HiddenFor(m=>m.MaritalStatusId)
                @*<div class="form-group">
                    @Html.LabelFor(m => m.BloodGroupId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.BloodGroupId, new { @class = "form-control text-disabled", @readonly = true })
                    </div>
                </div>*@
                <div class="form-group">
                    @Html.LabelFor(m => m.MaritalStatusName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.MaritalStatusName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Marital Staus Name" })
                        @Html.ValidationMessageFor(m => m.MaritalStatusName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearMaritalStatusInfo","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">MARITAL STATUS RECORD</span>
            <a href="@Url.Action("ClearMaritalStatusInfo","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetMaritalStatusRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter Marital Status & then press enter" })
            }

          
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                    <tr>
                        <th>SERIAL</th>
                        <th>MARITAL STATUS NAME</th>
                        <th>ACTION </th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var marital in maritalStatusList)
                        {
                            <tr>
                                <td> @marital.SerialNumber </td>
                                <td> @marital.MaritalStatusName </td>
                                <td style="width: 5%; text-align: center;">
                                    @using (Html.BeginForm("GetMaritalStatusRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                    {
                                        @*@Html.AntiForgeryToken()*@
                                        <input type="hidden" name="pId" value="@marital.MaritalStatusId" />
                                        <button class="btn btn-md btn-success btn-edit" type="submit">
                                            <i class="fa fa-edit"></i> Edit
                                        </button>
                                    }

                                </td>
                            </tr>
                        }
                    }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(maritalStatusList.PageCount < maritalStatusList.PageNumber ? 0 : maritalStatusList.PageNumber) of @maritalStatusList.PageCount
                </span>
                <span class="showing-info">
                    Showing @maritalStatusList.FirstItemOnPage to @maritalStatusList.LastItemOnPage of @maritalStatusList.TotalItemCount Marital Statuses
                </span>
                @Html.PagedListPager(maritalStatusList, page => Url.Action("GetMaritalStatusRecord", new { page, pageSize = maritalStatusList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
   
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}
