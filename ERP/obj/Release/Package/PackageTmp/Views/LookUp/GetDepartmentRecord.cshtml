@model ERP.MODEL.DepartmentModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Department";
    IPagedList<DepartmentModel> departmentList = ViewBag.DepartmentList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }
}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD DEPARTMENT</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveDepartmentInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               @Html.HiddenFor(m=>m.DepartmentId)
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentCode, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.DepartmentCode, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Department Code" })
                        @Html.ValidationMessageFor(m => m.DepartmentCode, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(m => m.UnitId, ViewBag.UnitDDList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UnitId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Department Name" })
                        @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentNameBangla, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.DepartmentNameBangla, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Department Name(Bangla)" })
                        @Html.ValidationMessageFor(m => m.DepartmentNameBangla, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearDepartment","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">DEPARTMENT RECORD</span>
            <a href="@Url.Action("ClearDepartment","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetDepartmentRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter Department name & then press enter" })
            }
          
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                    <tr>
                        <th>Serial</th>
                        <th>DEPARTMENT CODE</th>
                        <th>UNIT NAME</th>
                        <th>DEPARTMENT NAME</th>
                        <th>DEPARTMENT NAME BANGLA</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var dept in departmentList)
                        {
                            <tr>
                                <td> @dept.SerialNumber </td>
                                <td> @dept.DepartmentCode </td>
                                <td> @dept.UnitName </td>
                                <td> @dept.DepartmentName </td>
                                <td> @dept.DepartmentNameBangla </td>
                                <td style="width: 5%; text-align: center;">
                                    @using (Html.BeginForm("GetDepartmentRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                    {
                                        //@Html.AntiForgeryToken()
                                        <input type="hidden" name="pId" value="@dept.DepartmentId" />
                                        <button class="btn btn-md btn-success btn-edit" type="submit">
                                            <i class="fa fa-edit"></i> Edit
                                        </button>
                                    }

                                </td>
                            </tr>
                        }
                    }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(departmentList.PageCount < departmentList.PageNumber ? 0 : departmentList.PageNumber) of @departmentList.PageCount
                </span>
                <span class="showing-info">
                    Showing @departmentList.FirstItemOnPage to @departmentList.LastItemOnPage of @departmentList.TotalItemCount Departments
                </span>
                @Html.PagedListPager(departmentList, page => Url.Action("GetDepartmentRecord", new { page, pageSize = departmentList.PageSize,SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
   
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

