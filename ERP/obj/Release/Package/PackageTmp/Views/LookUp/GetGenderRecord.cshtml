@model ERP.MODEL.GenderModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Gender Info";
    IPagedList<GenderModel> genderList = ViewBag.GenderList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }



}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">ADD GENDER</h4>
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
        {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveGenderInfo", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               
                @Html.HiddenFor(m=>m.GenderId)
                
                <div class="form-group">
                    @Html.LabelFor(m => m.GenderName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.GenderName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Gender Name" })
                        @Html.ValidationMessageFor(m => m.GenderName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearGenderInfo","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">GENDER RECORDS</span>
            <a href="@Url.Action("ClearGenderInfo","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Records
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetGenderRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter Gender Name & then press enter" })
            }

          
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                    <tr>
                        <th>SERIAL</th>
                        <th>GENDER NAME</th>
                        <th>ACTION</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var gender in genderList)
                        {
                            <tr>
                                <td> @gender.SerialNumber </td>
                                <td> @gender.GenderName </td>
                                <td style="width: 5%; text-align: center;">
                                    @using (Html.BeginForm("GetGenderRecord", "LookUp",FormMethod.Get,  new { @class = "form-horizontal pull-left", role = "form" }))
                                    {
                                        @*@Html.AntiForgeryToken()*@
                                        <input type="hidden" name="pId" value="@gender.GenderId" />
                                        <button class="btn btn-md btn-success btn-edit" type="submit">
                                            <i class="fa fa-edit"></i> Edit
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>

                <span class="page-info">
                    Page @(genderList.PageCount < genderList.PageNumber ? 0 : genderList.PageNumber) of @genderList.PageCount
                </span>
                <span class="showing-info">
                    Showing @genderList.FirstItemOnPage to @genderList.LastItemOnPage of @genderList.TotalItemCount Genders
                </span>
                @Html.PagedListPager(genderList, page => Url.Action("GetGenderRecord", new { page, pageSize = genderList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
  
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}

