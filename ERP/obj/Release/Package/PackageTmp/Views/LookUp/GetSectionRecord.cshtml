@model ERP.MODEL.SectionModel
@using PagedList
@using ERP.MODEL
@using PagedList.Mvc

@{
    ViewBag.Title = "Section";
    IPagedList<SectionModel> SectionTypeList = ViewBag.SectionTypeList;

    string vMessage = "";
    if (TempData.ContainsKey("OperationMessage"))
    {
        vMessage = TempData["OperationMessage"].ToString();
    }
}

<div class="col-md-12">
    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            <h4 class="panel-title">SECTION INFORMATION</h4>
          
        </div>
        @if (!string.IsNullOrWhiteSpace(vMessage))
            {

            <div class="row alert alert-success alert-dismissable alert-custom">
                <button aria-hidden="true" data-dismiss="alert" class="close close-custom" type="button">×</button>
                <span class="success-msg">@vMessage</span>
            </div>
        }

        <div class="panel-body">
            @using (Html.BeginForm("SaveSectionType", "LookUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-lg-4">
                        @Html.HiddenFor(m => m.SectionId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SectionCode, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.SectionCode, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Section code" })
                        @Html.ValidationMessageFor(m => m.SectionCode, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentId, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @*@Html.DropDownListFor(m => m.SectionId, new SelectList(ViewBag.SectionDDList, "SectionId", "SectionNAME"), "--Please select one--", new { @class = "form-control" })*@
                        @Html.DropDownListFor(m => m.DepartmentId, ViewBag.DepartmentDDList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SectionName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.SectionName, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Section name" })
                        @Html.ValidationMessageFor(m => m.SectionName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-1">
                        <span class="required">*</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SectionNameBangla, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.SectionNameBangla, new { @class = "form-control", @autofocus = true, @placeholder = "Enter Section name in Bangla" })
                        @*@Html.ValidationMessageFor(m => m.SectionNameBangla, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="col-lg-1">
                        @*<span class="required">*</span>*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-10">
                        <button class="btn btn-md btn-primary btn-save" type="submit">
                            <i class="fa fa-save"></i> Save
                        </button>

                        <a href="@Url.Action("ClearSectionType","LookUp")" class="btn btn-md btn-warning btn-clear">
                            <i class="fa fa-circle-o-notch"></i> Clear
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-md-12">

    <div class="panel panel-card margin-b-30">
        <div class="panel-heading panel-heading-custom">
            @*<h4 class="panel-title">SECTION RECORD</h4>*@
            <span class="panel-title">SECTION RECORD</span>
            <a href="@Url.Action("ClearSectionType","LookUp")" class="btn btn-md btn-info btn-clear pull-right">
                <i class="fa fa-list"></i> Show All Record
            </a>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("GetSectionRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBoxFor(m => m.SearchBy, new { @id = "SearchBy", @class = "form-control search-by", @placeholder = "Enter Section Name or Section Code or Department & then press enter" })
            }

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-custom">
                    <thead>
                        <tr>
                            <th>Serial</th>
                            <th>Section Code</th>
                            <th>Department Name</th>
                            <th>Section Name</th>
                            <th>Section Name (Bangla)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var Section in SectionTypeList)
                            {
                                <tr>
                                    <td> @Section.SerialNumber </td>
                                    <td> @Section.SectionCode </td>
                                    <td> @Section.DepartmentName </td>
                                    <td> @Section.SectionName </td>
                                    <td> @Section.SectionNameBangla </td>
                                    <td style="width: 5%; text-align: center;">
                                        @using (Html.BeginForm("GetSectionRecord", "LookUp", FormMethod.Get, new { @class = "form-horizontal pull-left", role = "form" }))
                                        {
                                            @*@Html.AntiForgeryToken()*@
                                            <input type="hidden" name="pId" value="@Section.SectionId" />
                                            <button class="btn btn-md btn-success btn-edit" type="submit">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <span class="page-info">
                    Page @(SectionTypeList.PageCount < SectionTypeList.PageNumber ? 0 : SectionTypeList.PageNumber) of @SectionTypeList.PageCount
                </span>
                <span class="showing-info">
                    Showing @SectionTypeList.FirstItemOnPage to @SectionTypeList.LastItemOnPage of @SectionTypeList.TotalItemCount Section
                </span>
                @Html.PagedListPager(SectionTypeList, page => Url.Action("GetSectionRecord", new { page, pageSize = SectionTypeList.PageSize, SearchBy = ViewBag.searchValue }))
            </div>
        </div>
    </div>
</div>



@section Scripts {
   
    <script>

        $(document).ready(function () {
            var btnName = localStorage.getItem("btnName");
            if (btnName) {
                $('.btn-save').html('<i class="fa fa-edit"></i> ' + btnName);
                localStorage.removeItem("btnName");
            }
            $(".btn-edit").click(function () {
                localStorage.setItem("btnName", "Update");
            });
        })

    </script>
}